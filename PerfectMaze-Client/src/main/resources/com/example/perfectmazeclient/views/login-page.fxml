<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" styleClass="login-pane" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.perfectmazeclient.views.LoginController">

    <center>
        <VBox alignment="CENTER" maxWidth="300" prefHeight="540.0" prefWidth="358.0" spacing="10">

            <TextField fx:id="emailField" prefHeight="50.0" prefWidth="297.0" promptText="Email" styleClass="text-field">
            <font>
               <Font name="System Bold" size="20.0" />
            </font></TextField>
         <Label fx:id="emailFieldError" prefWidth="297.0" text="Empty Field" textFill="#dc3545" wrapText="true">
            <font>
               <Font name="Dosis ExtraBold" size="16.0" />
            </font>
         </Label>
            <PasswordField fx:id="passwordField" prefHeight="50.0" prefWidth="296.0" promptText="Password" styleClass="text-field">
            <font>
               <Font name="System Bold" size="20.0" />
            </font></PasswordField>
         <Label fx:id="passwordFieldError" prefWidth="297.0" text="Empty Field" textFill="#dc3545" wrapText="true">
            <font>
               <Font name="Dosis ExtraBold" size="16.0" />
            </font>
         </Label>
         <Label fx:id="serverRequestFieldError" prefWidth="297.0" text="Invalid Credentials" textFill="#dc3545" wrapText="true">
            <font>
               <Font name="Dosis ExtraBold" size="16.0" />
            </font>
         </Label>

            <Button onAction="#onLoginButtonClick" prefHeight="50.0" prefWidth="297.0" styleClass="btn-primary" text="Login" textFill="WHITE">
            <font>
               <Font name="Dosis ExtraBold" size="32.0" />
            </font></Button>
        </VBox>
    </center>
   <top>
         <Label prefHeight="60.0" prefWidth="100.0" text="Login" textFill="#007bff" BorderPane.alignment="CENTER">
         <font>
            <Font name="Dosis ExtraBold" size="39.0" />
         </font>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin></Label>
   </top>
   <bottom>
         <Button alignment="CENTER" onAction="#onBackButtonClick" prefHeight="69.0" prefWidth="119.0" styleClass="btn-secondary" text="Back" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font size="32.0" />
         </font>
      </Button>
   </bottom>

</BorderPane>
